{
  "name": "vm-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vm-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/vm-api",
        "main": "apps/vm-api/src/main.ts",
        "tsConfig": "apps/vm-api/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "apps/vm-api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "vm-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "vm-api:build:development"
        },
        "production": {
          "buildTarget": "vm-api:build:production"
        }
      },
      "dependsOn": ["docker-compose"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/vm-api/**/*.ts"]
      }
    },
    "docker-compose": {
      "command": "docker-compose -f apps/vm-api/docker-compose.yml up -d"
    }
  },
  "tags": []
}
